int hexChartoDec(char ch)
{
	ch=toupper(ch);
	if(ch>='A'&&ch<='F')
	return 10+ch-'A';
	else 
	return ch-'0';
}
int hexDec(const string&hex)
{
	int dec =0;
	for(unsigned i =0;i<hex.size();i++)
	{
		dec=dec*16+ hexChartoDec(hex[i]);	
	}	
	return dec;
} 

